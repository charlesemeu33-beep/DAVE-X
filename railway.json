{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["nodejs"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-18_x", "ffmpeg", "imagemagick"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicy": "ON_FAILURE",
    "environmentVariables": {
      "SESSION_ID": {
        "description": "WhatsApp session ID (starts with DAVE-X:~)",
        "required": true,
        "value": ""
      }
    },
    "volumes": [
      {
        "name": "session_data",
        "path": "/app/session"
      }
    ]
  }
}